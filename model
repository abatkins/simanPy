class Model:
    def __init__(self, filename):
        self.filename = filename
        self.exp = []
        self.mod = []

    def add(self, obj):
        if obj.ext == "mod":
            self.mod.append(obj)
        elif obj.ext == "exp":
            self.mod.append(obj)
        else:
            raise ValueError("Extension type %s is not recognized" % obj.ext)

    def compile(self):
        self._to_file(".mod", self.mod)
        self._to_file(".exp", self.exp)


    #def link(self, mod_file, exp_file):

    #def run_siman(self, p_file):

    #def run(self):

    def _to_file(self, ext, objs):
        file = open(self.filename + ext, 'w')
        for obj in objs:
            file.write("%s\n" % obj)
        file.close()